<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_room"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="房间名"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>
    <!--视频内容显示设置-->
    <RelativeLayout
        android:id="@+id/rl_bigContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:background="#0f0"
            android:id="@+id/fl_small1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_width="90dp"
            android:layout_height="160dp"/>
        <FrameLayout
            android:id="@+id/fl_small2"
            android:background="#f00"
            android:layout_below="@+id/fl_small1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="90dp"
            android:layout_height="160dp"/>
    </RelativeLayout>
    <!--底部控制按钮-->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_endcall"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@mipmap/btn_endcall"
            android:scaleType="center"
            android:onClick="leaveChannel"
            />
        <ImageView
            android:id="@+id/iv_mute"
            android:layout_marginStart="20dp"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@mipmap/btn_mute"
            android:scaleType="center"
            android:onClick="muteAudio"
            />
    </LinearLayout>
</RelativeLayout>